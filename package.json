{
  "name": "enri3l.github.io",
  "version": "1.0.0",
  "description": "Personal website and portfolio showcasing TypeScript development and AWS automation expertise",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=24.6.0",
    "pnpm": ">=10"
  },
  "packageManager": "pnpm@10.15.0",
  "scripts": {
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "typecheck": "vue-tsc --noEmit",
    "lint": "eslint . && markdownlint-cli2",
    "lint:fix": "eslint . --fix && markdownlint-cli2 --fix",
    "format": "prettier . --check",
    "format:fix": "prettier . --write",
    "prepare": "lefthook install",
    "release": "semantic-release",
    "release:dry": "semantic-release --dry-run"
  },
  "author": "Enrico Lionello",
  "license": "MIT",
  "dependencies": {
    "vue": "^3.5.13",
    "vitepress-carbon": "^1.5.0"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "@eslint/js": "^9.34.0",
    "@semantic-release/changelog": "6.0.3",
    "@semantic-release/commit-analyzer": "13.0.1",
    "@semantic-release/release-notes-generator": "14.0.3",
    "@types/node": "^24.3.0",
    "eslint": "^9.34.0",
    "lefthook": "^1.12.3",
    "markdownlint-cli2": "^0.18.1",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.40.0",
    "vitepress": "^1.6.4",
    "vue-tsc": "^2.1.10"
  }
}
